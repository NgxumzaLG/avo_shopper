     <div class="container-lg">
        <section>
            <div class="row">
                <div class="col-sm-2"></div>

                <div class="col-sm-8 my-4 mx-2 card">
                    <div class="card-header mb-3 text-dark">

                        <h5>Avocado Deals</h5>
                    </div>

                    <div class="card-body text-dark deal-text">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Deal</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each selectedShopDeals}}
                                <tr>
                                    <td>{{id}}</td>
                                    <td>{{qty}} for R{{price}}</td>
                                    
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                        <div class="home-link">
                            <a href="/">Home</a>
                        </div>
                    </div>
                </div>

                <div class="col-sm-2"></div>
            </div>

        </section>



    </div>